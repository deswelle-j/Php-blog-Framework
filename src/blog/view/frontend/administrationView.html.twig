<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>{% block title %} {% endblock %}</title>
		<link href="css/styles.css" rel="stylesheet" />
	</head>
	<body>
    <header>
        <a href="index.php?action=logOut">DÃ©connexion</a>
    </header>
    <h3>Les billets</h3>
    <table class="table"><tr>
        <tr>
            <th>id</th><th>titre</th><th>contenu</th><th>date de creation</th><th></th>
        </tr>
        {% for post in posts %}
                <tr>
                    <td>{{post.id}}</td>
                    <td>{{post.title }}</td>
                    <td>{{post.content}}</td>
                    <td>{{post.dateCreation}}</td>
                </tr>
                        
        {% endfor %}
    </table>
    <h3>Les commentaires</h3>
    <table>
        <tr>
            <th>id</th><th>autheur</th><th>commentaire</th><th>numero du billet</th><th>date de creation</th>
        </tr>
        {% for comment in comments %}
            <tr>
                <td>{{comment.id}}</td>
                <td>{{comment.author}}</td>
                <td>{{comment.comment}}</td>
                <td>{{comment.postId}}</td>
                <td>{{comment.commentDate}} </td>
            </tr>
                        
        {% endfor %}
    </table>        
	</body>
</html>

