{% extends "base.html.twig" %}

{% block title %}Mon blog {% endblock %}

{% block content %}

<section id="next-section" class="probootstrap-section">
    <div class="container">
		<div class="row mb50 probootstrap-animate">
			<a href="index.php">Retour Ã  la liste des billets</a>
			<div class="col-md-12">
				<div class="row">
					<div class="col-md-6">
						<h3 class="mt0">{{post.title}}</h3>
						<em>le {{post.dateCreation}}</em>
					</div>
				</div>
			</div>
			<div class="col-md-12">
				{{post.content}}
			</div>
		</div>
		<div class="row mb50 probootstrap-animate">
			<div class="col-md-6">
				<h3 class="mt-0">Commentaires</h3>
				{% for comment in comments %}
					<p>
						<strong>{{comment.author}}</strong> le {{comment.commentDate}} 
					</p>
					<p>{{comment.comment}}</p>
				{% endfor %}
			</div>
			{% if isConnected() %}
			<div class="col-md-6">
				<form action="index.php?action=addComment&amp;id={{post.id}}" method="post">
					<div class="form-group">
						<label for="author">Auteur {{session}}</label><br />
						<input type="text" id="author" name="author" value="{{user}}" hidden required />
					</div>
					<div class="form-group col-sm-10">
						<label for="comment">Commentaire</label><br />
						<textarea class="col-sm-12" id="comment" name="comment" rows="5" style="width:100%;" required></textarea>
					</div>
					<div class="form-group">
						<input type="submit" />
					</div>
				</form>
			</div>
			{% endif %}
		</div>
	</div>
</section>
	
	
{% endblock %}
